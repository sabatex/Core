<Project>
  <PropertyGroup>
    <!-- Centralized output path for all projects -->
    <!-- Builds will be placed under E:\builds\<ProjectName>\<Configuration> -->
    <OutputPath>E:\builds\Core\$(MSBuildProjectName)\bin\$(Configuration)\</OutputPath>
    <BaseIntermediateOutputPath>E:\builds\Core\$(MSBuildProjectName)\obj\$(Configuration)\</BaseIntermediateOutputPath>
  </PropertyGroup>
</Project>